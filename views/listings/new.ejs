<% layout("/layouts/boilerplate")%>
<div class="wallpaper">
<div class="row mt-2">
   <div class="col-8 offset-2">

    <h3>Create a New Listings</h3>
    <form method="POST" action="/listings" 
    novalidate class="needs-validation"
     enctype="multipart/form-data">

        <div class="mb-3">
            <lable for="title" class="form-label" required>Title</lable>
            
            <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required>
            <div class="valid-feedback">Title looks goods!</div>
        </div>
        

        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea name="listing[description]"  class="form-control"  required></textarea>
            <div class="invalid-feedback">Please Enter shorts description</div>
        </div>
        
       
        <div class="mb-3">
            <lable for="image" class="form-label">Upload Listings Image </lable>
            <input name="listing[image]" type="file" 
            class="form-control" required>
            
        </div>

       <div class="row">
        <div class="mb-3 col-4">
            <lable for="price" class="form-label" >Price</lable>
            <input name="listing[price]" placeholder="1200" class="form-control"  type="number" required>
            <div class="invalid-feedback">Price Should be valid</div>
        </div>
       
        <div class="mb-3 col-8">
            <lable for="country" class="form-label">Country</lable>
            <input name="listing[country]" placeholder="India" type="text" class="form-control"  required>
            <div class="invalid-feedback"> Should be needed valid Country name</div>
        </div>
       </div>
        
        
        <div class="mb-3">
            <lable for="location" class="form-label" >Location</lable>
            <input name="listing[location]" placeholder="Enter Location" type="text" class="form-control"  required>
            <div class="invalid-feedback">Please Should be valid Location</div>
         </div>

        <button class="btn btn-dark add-btn mt-3">Add</button>
    </form>
</div>
</div></div>
