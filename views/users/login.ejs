<% layout("/layouts/boilerplate")%>
<div class="row mt-2">
    <h1 class="offset-2">Login</h1>
    
   <div class="col-8 offset-2">
    <form action="/login" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
            <lable for="username" class="form-label" required>Username</lable>
            
            <input name="username"
            id="username"
            type="text" 
            class="form-control" 
            required>
        
            <lable for="password" class="form-label" required>Password</lable>
            
            <input name="password"
            id="password"
            type="password" 
            class="form-control" 
            required>
        </div>
        <button class="btn btn-success">Login</button>

    </form>
       </div>
 </div>